<%= form_with model:book, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>

  <div class="star-field">
    <%= f.fields_for :book_ratings, book.book_ratings.new do |i| %>
      <%= i.radio_button :rate, 5, id: 'book_book_ratings_attributes_0_star5' %>
      <%= i.label :star5, '★' %>
      <%= i.radio_button :rate, 4, id: 'book_book_ratings_attributes_0_star4' %>
      <%= i.label :star4, '★' %>
      <%= i.radio_button :rate, 3, id: 'book_book_ratings_attributes_0_star3' %>
      <%= i.label :star3, '★' %>
      <%= i.radio_button :rate, 2, id: 'book_book_ratings_attributes_0_star2' %>
      <%= i.label :star2, '★' %>
      <%= i.radio_button :rate, 1, id: 'book_book_ratings_attributes_0_star1' %>
      <%= i.label :star1, '★' %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
