<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th class="col-2"></th>
      <th class="col-3">Title</th>
      <th class="col-3">Opinion</th>
      <th class="col-2"></th>
      <th class="col-2"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
          <% if book.favorite_users.ids.include? current_user.id %>
            <%= link_to favorite_from_user_to_book_path(book: book), class: "hover-text-decoration-none", method: :delete do %>
              <div class="color-red">
                <i class="fas fa-heart"></i>
                <%= book.favorite_users.count %>
              </div>
            <% end %>
          <% else %>
            <%= link_to favorite_from_user_to_books_path(book: book), class: "hover-text-decoration-none", method: :post do %>
              <div class="color-blue">
                <i class="fas fa-heart"></i>
                <%= book.favorite_users.count %>
              </div>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>